{{!< default}}

{{#post}}

<main class="site-main">
    <article class="{{post_class}} single">

        <header class="post-header gh-canvas">
            <h1 class="post-title">{{title}}</h1>
            {{> "feature-image"}}
        </header>

        <div class="post-content gh-content gh-canvas">
            {{content}}
        </div>

    </article>
</main>

{{/post}}